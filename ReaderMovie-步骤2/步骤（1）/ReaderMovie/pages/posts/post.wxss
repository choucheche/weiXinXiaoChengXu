swiper{
    width:100%;
    height:600rpx;
}
swiper image{
    width:750rpx;
    /*这里的的750rpx，相当于100%*/
    height:600rpx;
}
.post-container{
    display:flex;
    flex-direction: column;
    /*列布局，每行一个元素*/
    margin-top:20rpx;
    margin-bottom:40rpx;
    background-color:#fff;
    border-top:1px solid #ededed;
    border-bottom:1px solid #ededed;
    padding-bottom:10px;
}
.post-author-date{
    margin:10px 0 15px 5px;
}
.post-author{
    width:60rpx;
    height:60rpx;
    vertical-align:middle;
    border-radius:50%;
}
.post-date{
    margin:0 5px 0 20rpx;
    vertical-align:middle;
    font-size:26rpx;
}
.post-title{
    font-size:34rpx;
    font-weight:600;
    color:#333;
    margin:0 0 10px 10px;
}
.post-image{
    width:750rpx;
    height:340rpx;
    margin:0 0 15px 16px;
}
.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left:20rpx;
    letter-spacing:2rpx;
    line-height:40rpx;
}
.post-like{
    font-size:13px;
    flex-direction: row;
    /*指定为行布局，不然会继承上面的，列布局*/
    line-height:16px;
    margin-left:10px;
}
.post-like-image{
    height:16px;
    width:16px;
    margin:0 8px 0 0;
    vertical-align:middle;
}
.post-like-font{
    vertical-align: middle;
    margin:0 20px 0 0;
}